<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">


    <xacro:macro name="wheel_joint" params="preffix suffix">

      <joint name="joint_wheel_${preffix}_${suffix}" type="continuous">
          <xacro:if value="${preffix == 'front'}">

            <xacro:if value="${suffix == 'left'}">
              <origin xyz="0.03048 0 0" rpy="0 1.5708 0"/>
              <parent link="link_acker_front_left"/>
            </xacro:if>

            <xacro:unless value="${suffix == 'left'}">
              <origin xyz="-0.03049 0 0" rpy="0 -1.5708 0"/>
              <parent link="link_acker_front_right"/>
            </xacro:unless>

          </xacro:if>

          <xacro:unless value="${preffix == 'front'}">

            <xacro:if value="${suffix == 'left'}">
              <origin xyz="0.13691 0.00033 -0.0371" rpy="0 1.5708 0"/>
              <parent link="base_link"/>
            </xacro:if>

            <xacro:unless value="${suffix == 'left'}">
              <origin xyz="-0.13691 0.00033 -0.0371" rpy="0 -1.5708 0"/>
              <parent link="base_link"/>
            </xacro:unless>

          </xacro:unless>


        <child link="link_wheel_${preffix}_${suffix}"/>
        <axis xyz="0 0 1.0"/>
        <limit effort="1.0" velocity="100.0"/>
      </joint>

    </xacro:macro>

    <xacro:wheel_joint preffix="front" suffix="left"/>
    <xacro:wheel_joint preffix="front" suffix="right"/>
    <xacro:wheel_joint preffix="rear" suffix="left"/>
    <xacro:wheel_joint preffix="rear" suffix="right"/>

